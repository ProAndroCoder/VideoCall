<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralInfoActivity">

    <ImageView
        android:id="@+id/img_general_info"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/title_general"
        style="@style/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_general_info"
        android:padding="20dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_general"
        android:padding="20dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/img_general_back"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_et_active"
        android:src="@drawable/ic_arrow_back" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>